<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="social-login-popup-authentication-social-login" destination="customer.login.container" after="-" />
        <referenceBlock name="customer.login.container">
            <container name="guest.order.container" htmlTag="div" htmlClass="block guest-order">
                <block class="Magento\Cms\Block\Block" name="guest.order.block" after="-">
                    <arguments>
                        <argument name="block_id" xsi:type="string">guest-order</argument>
                    </arguments>
                </block>
            </container>
        </referenceBlock>
    </body>
</page>
 